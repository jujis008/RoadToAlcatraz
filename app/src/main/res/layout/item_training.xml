<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".TrainActivity"
    android:padding="@dimen/gap_high">

    <ImageView
        android:id="@+id/im_skill_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/gap_high"
        android:src="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="@dimen/gap_xxxhigh"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_skill_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_skill_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_skill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100s"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_skill_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRAIN"
        android:paddingLeft="@dimen/gap_high"
        android:layout_gravity="right"/>

</LinearLayout>
